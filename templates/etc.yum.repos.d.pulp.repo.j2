#
# Pulp Repositories
# {{ ansible_managed }}
#
{% for repo in (stdbase_pulp_repos + stdbase_pulp_additional_repos) if repo.os_version|default(ansible_distribution_major_version) is version (ansible_distribution_major_version, '==') %}

[{{ repo.basename }}-{{ stdbase_repo_version }}]
name = {{ repo.basename }}-{{ stdbase_repo_version }}
enabled = 1
gpgcheck = 1
gpgkey = file:///etc/pki/rpm-gpg/{{ repo.gpg_key }}
baseurl = https://{{ stdbase_pulp_address }}/pulp/repos/{{ repo.basename|e }}-{{ stdbase_repo_version|e }}
{% endfor %}
